{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./gen/srv",
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "paths": {
      "#cds-models/*": ["./@cds-models/*/index.ts"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "files": ["./node_modules/@cap-js/cds-types/dist/cds-types.d.ts"],
  "include": ["./srv/**/*"]
}
